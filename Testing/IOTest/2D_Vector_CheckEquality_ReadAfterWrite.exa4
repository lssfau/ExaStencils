// domain declarations

Domain global< [0.0, 0.0] to [1.0, 1.0] >

// field layout declarations

Layout CellVecWithComm < Matrix < Real, 2, 1 > , Cell >@all {
  duplicateLayers = [1, 1] with communication
  ghostLayers     = [1, 1] with communication
}

// field declarations

Field srcVec < global, CellVecWithComm, None >@all
Field destVec < global, CellVecWithComm, None >@all

// external field declarations

// stencil declarations

// stencil field declarations

// functions

Function compareFields@finest ( ) : Int {
  // check for equality
  loop over destVec sequentially {
    compare(srcVec, destVec, 0.001)
  }

  // reset dest
  loop over destVec {
    destVec = -1.0
  }
    
  return 0
}

Function initSRC@finest {
  loop over srcVec {
    srcVec = [0; 1]
  }
}

Function checkEquality@finest ( ) : Unit {
  Val ret : Int = compareFields@finest ( )
  if( ret == -1 ) {
    exit(1)
  }
}

Function Application {
  // init
  startTimer ( "setup" )
  initGlobals ( )
  initDomain ( )
  initFieldsWithZero ( )
  initGeometry ( )
  initSRC@finest ( )
  stopTimer ( "setup" )
  
  // arguments
  Val useGhost : Bool = true
  Val useBin : Bool = true
  Val useCanonicalLayout : Bool = true
  Val condition : Bool = true
  Val separator : String = ","
    
  // toggle I/O modes here
  Val lockingIO : Bool = true
  Val fppIO     : Bool = true
  Val hdfIO     : Bool = true
  Val mpiIO     : Bool = true
  Val ncIO      : Bool = true
  Val sionIO    : Bool = true
       
  if (lockingIO) {
    startTimer ("Lock: writeField")
    writeField_lock ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_lock.txt", srcVec@finest, useGhost, !useBin, condition, separator)
    stopTimer ("Lock: writeField")

    startTimer ("Lock: readField")
    readField_lock ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_lock.txt", destVec@finest, useGhost, !useBin, condition, separator)
    stopTimer ("Lock: readField")

    checkEquality@finest ( )
    print ( 'Passed lock test' )

    // write csv for paraview
    //printField_lock ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis.csv", srcVec@finest, useGhost, !useBin, condition, separator)
  }
  
  if (fppIO) {
      startTimer ("FPP: writeField")
      writeField_fpp ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_fpp_$blockId.bin", srcVec@finest, useGhost, useBin, condition)
      stopTimer ("FPP: writeField")

      startTimer ("FPP: readField")
      readField_fpp ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_fpp_$blockId.bin", destVec@finest, useGhost, useBin, condition)
      stopTimer ("FPP: readField")
      
      checkEquality@finest ( )
      print ( 'Passed fpp test' )
      
      // write xdmf files for paraview/visit
      //printField_fpp ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis_fpp_bin.xmf", srcVec@finest, useBin)
      //printField_fpp ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis_fpp.xmf", srcVec@finest)
  }
  
  if (hdfIO) {
    startTimer ("HDF5: writeField")
    writeField_hdf5 ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.h5", "/test/abs/path/src", srcVec@finest)
    stopTimer ("HDF5: writeField")

    startTimer ("HDF5: readField")
    readField_hdf5 ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.h5", "/test/abs/path/src", destVec@finest)
    stopTimer ("HDF5: readField")

    checkEquality@finest ( )
    print ( 'Passed hdf5 test' )

    // write xdmf file for paraview/visit
    //printField_hdf5 ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis_h5.xmf", srcVec@finest, useCanonicalLayout)
    //printField_hdf5 ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis_h5.xmf", srcVec@finest)
  }
  
  if (mpiIO) {
    startTimer ("MPIIO: writeField")
    writeField_mpiio ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.bin", srcVec@finest, useGhost)
    stopTimer ("MPIIO: writeField")

    startTimer ("MPIIO: readField")
    readField_mpiio ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.bin", destVec@finest, useGhost)
    stopTimer ("MPIIO: readField")

    checkEquality@finest ( )
    print ( 'Passed MPI I/O test' )

    // write xdmf file for paraview/visit
    //printField_mpiio ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis_mpiio.xmf", srcVec@finest, useCanonicalLayout)
    //printField_mpiio ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis_mpiio.xmf", srcVec@finest)
  }
  
  if (ncIO) {
    startTimer ("PnetCDF: writeField")
    writeField_nc ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.nc", "field_src", srcVec@finest, !useGhost)
    stopTimer ("PnetCDF: writeField")

    startTimer ("PnetCDF: readField")
    readField_nc ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.nc", "field_src", destVec@finest, !useGhost)
    stopTimer ("PnetCDF: readField")

    checkEquality@finest ( )
    print ( 'Passed nc test' )
    
    // write nc file for paraview/visit
    //printField_nc ("data/2D_Vector_CheckEquality_ReadAfterWrite/src_vis.nc", srcVec@finest, useCanonicalLayout)
  }
   
  
  if(sionIO) {
    startTimer ("SionLib: writeField")
    writeField_sion ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.sion", srcVec@finest, !useGhost, condition)
    stopTimer ("SionLib: writeField")

    startTimer ("SionLib: readField")
    readField_sion ("data/2D_Vector_CheckEquality_ReadAfterWrite/src.sion", destVec@finest, !useGhost, condition)
    stopTimer ("SionLib: readField")

    checkEquality@finest ( )
    print ( 'Passed sion test' )
  }
  
  
  // de-init
  printAllTimers ( )
  destroyGlobals ( )
}
